#!/bin/bash

# Color codes for output
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Cleanup function to kill background processes
cleanup() {
  echo -e "\n${YELLOW}Shutting down servers...${NC}"
  if [ ! -z "$BACKEND_PID" ]; then
    kill $BACKEND_PID 2>/dev/null
  fi
  if [ ! -z "$FRONTEND_PID" ]; then
    kill $FRONTEND_PID 2>/dev/null
  fi
  exit 0
}

# Set up trap to catch Ctrl+C and other termination signals
trap cleanup SIGINT SIGTERM

echo -e "${BLUE}Starting DailyNotes Development Environment${NC}\n"

# Load environment variables and verify setup
if test -f "./config/.env"; then
  . ./config/.env
fi

echo -e "${GREEN}Verifying environment...${NC}"
./venv/bin/python verify_env.py

if test -f "./config/.env"; then
  . ./config/.env
fi

# Set up Flask for development
export FLASK_APP=server.py
export FLASK_ENV=development

# Run database migrations
echo -e "${GREEN}Running database migrations...${NC}"
./venv/bin/flask db upgrade

# Verify data migrations
./venv/bin/python verify_data_migrations.py

# Start backend server
echo -e "${GREEN}Starting backend server on http://127.0.0.1:5001...${NC}"
./venv/bin/flask run --host=0.0.0.0 --port=5001 &
BACKEND_PID=$!

# Wait a moment for backend to start
sleep 2

# Start frontend dev server
echo -e "${GREEN}Starting frontend dev server...${NC}"
cd client
nvm use
NODE_OPTIONS=--openssl-legacy-provider npm run serve &
FRONTEND_PID=$!
cd ..

# Wait for servers to be ready
echo -e "${YELLOW}Waiting for servers to start...${NC}"
sleep 3

# Open browser
echo -e "${GREEN}Opening browser at http://127.0.0.1:8080${NC}"
if command -v open &> /dev/null; then
  # macOS
  open http://127.0.0.1:8080
elif command -v xdg-open &> /dev/null; then
  # Linux
  xdg-open http://127.0.0.1:8080
elif command -v start &> /dev/null; then
  # Windows
  start http://127.0.0.1:8080
else
  echo -e "${YELLOW}Could not detect browser command. Please open http://127.0.0.1:8080 manually${NC}"
fi

echo -e "\n${GREEN}âœ“ Development environment is running${NC}"
echo -e "${BLUE}Backend:${NC}  http://127.0.0.1:5001"
echo -e "${BLUE}Frontend:${NC} http://localhost:8080 (if running separately)"
echo -e "\n${YELLOW}Press Ctrl+C to stop all servers${NC}\n"

# Wait for background processes
wait
