#!/bin/bash

# DailyNotes Docker Development Environment Startup Script
# This script starts the Docker development environment and opens the app in your browser
# Usage:
#   ./dev              - Start the development environment (SQLite)
#   ./dev --postgres   - Start with PostgreSQL database
#   ./dev --mysql      - Start with MySQL database
#   ./dev --restart    - Restart the webpack dev server
#   ./dev --down       - Stop the development environment

set -e

# Colors for output
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Determine which docker compose command to use
if docker compose version &> /dev/null 2>&1; then
  DOCKER_COMPOSE="docker compose"
else
  DOCKER_COMPOSE="docker-compose"
fi

# Default compose file and database type
COMPOSE_FILE="docker-compose.dev.yml"
DB_TYPE="SQLite"
DB_INFO="Database stored in ./config/app.db"

# Parse database option
case "$1" in
  --postgres)
    COMPOSE_FILE="docker-compose-postgres.yml"
    DB_TYPE="PostgreSQL"
    DB_INFO="PostgreSQL database (dailynotes@postgres:5432)"
    shift
    ;;
  --mysql)
    COMPOSE_FILE="docker-compose-mysql.yml"
    DB_TYPE="MySQL"
    DB_INFO="MySQL database (dailynotes@mysql:3306)"
    shift
    ;;
esac

# Handle --restart option
if [ "$1" == "--restart" ]; then
  echo -e "${BLUE}ğŸ”„ Restarting webpack dev server...${NC}"
  docker exec dailynotes-dev pkill -f vue-cli-service || true
  echo -e "${GREEN}âœ… Dev server restart initiated${NC}"
  echo -e "${YELLOW}Wait ~15 seconds for webpack to rebuild${NC}"
  exit 0
fi

# Handle --down option
if [ "$1" == "--down" ]; then
  echo -e "${BLUE}ğŸ›‘ Stopping development environment...${NC}"
  # Stop all possible compose files
  $DOCKER_COMPOSE -f docker-compose.dev.yml down 2>/dev/null || true
  $DOCKER_COMPOSE -f docker-compose-postgres.yml down 2>/dev/null || true
  $DOCKER_COMPOSE -f docker-compose-mysql.yml down 2>/dev/null || true
  echo -e "${GREEN}âœ… Development environment stopped${NC}"
  exit 0
fi

echo -e "${BLUE}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
echo -e "${BLUE}â•‘   DailyNotes Development Environment       â•‘${NC}"
echo -e "${BLUE}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo -e "${GREEN}  Database: ${DB_TYPE}${NC}"
echo ""

# Check if Docker is running
if ! docker info > /dev/null 2>&1; then
  echo -e "${RED}âŒ Error: Docker is not running${NC}"
  echo -e "${YELLOW}Please start Docker Desktop and try again${NC}"
  exit 1
fi

# Check if docker-compose is available
if ! command -v docker-compose &> /dev/null && ! docker compose version &> /dev/null 2>&1; then
  echo -e "${RED}âŒ Error: docker-compose is not installed${NC}"
  echo -e "${YELLOW}Please install Docker Compose and try again${NC}"
  exit 1
fi

# Build and start the development environment
echo -e "${GREEN}ğŸ”¨ Building development Docker image...${NC}"
$DOCKER_COMPOSE -f $COMPOSE_FILE build

echo ""
echo -e "${GREEN}ğŸš€ Starting development environment...${NC}"
$DOCKER_COMPOSE -f $COMPOSE_FILE up -d

# Wait for services to be ready
echo ""
echo -e "${BLUE}â³ Waiting for services to start...${NC}"

# Function to check if a service is ready
check_service() {
  local url=$1
  local max_attempts=30
  local attempt=1

  while [ $attempt -le $max_attempts ]; do
    if curl -s "$url" > /dev/null 2>&1; then
      return 0
    fi
    sleep 1
    attempt=$((attempt + 1))
    echo -n "."
  done
  return 1
}

# Determine URLs and container name based on compose file
if [ "$COMPOSE_FILE" == "docker-compose.dev.yml" ]; then
  CHECK_URL="http://localhost:8080"
  FRONTEND_URL="http://localhost:8080"
  BACKEND_URL="http://localhost:5001"
  CONTAINER_NAME="dailynotes-dev"
else
  CHECK_URL="http://localhost:8000/health"
  FRONTEND_URL="http://localhost:8000"
  BACKEND_URL="http://localhost:8000/api"
  CONTAINER_NAME="dailynotes-server-1"
fi

# Check if service is ready
if check_service "$CHECK_URL"; then
  echo ""
  echo -e "${GREEN}âœ… Development environment is ready!${NC}"
  echo ""
  echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
  if [ "$COMPOSE_FILE" == "docker-compose.dev.yml" ]; then
    echo -e "${GREEN}  Frontend:${NC} $FRONTEND_URL"
    echo -e "${GREEN}  Backend:${NC}  $BACKEND_URL"
  else
    echo -e "${GREEN}  App:${NC}      $FRONTEND_URL"
  fi
  echo -e "${GREEN}  Database:${NC} $DB_TYPE"
  echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
  echo ""
  echo -e "${YELLOW}ğŸ“ Notes:${NC}"
  if [ "$COMPOSE_FILE" == "docker-compose.dev.yml" ]; then
    echo -e "  â€¢ Changes to Python files will auto-reload the Flask server"
    echo -e "  â€¢ Changes to Vue files will hot-reload in the browser"
  else
    echo -e "  â€¢ This is a production-like build for database testing"
    echo -e "  â€¢ Rebuild required for code changes: ./dev $1"
  fi
  echo -e "  â€¢ $DB_INFO"
  echo ""
  echo -e "${BLUE}ğŸ› ï¸  Useful commands:${NC}"
  echo -e "  â€¢ View logs:    ${YELLOW}$DOCKER_COMPOSE -f $COMPOSE_FILE logs -f${NC}"
  echo -e "  â€¢ Stop:         ${YELLOW}./dev --down${NC}"
  echo -e "  â€¢ Restart:      ${YELLOW}$DOCKER_COMPOSE -f $COMPOSE_FILE restart${NC}"
  echo -e "  â€¢ Shell access: ${YELLOW}docker exec -it $CONTAINER_NAME bash${NC}"
  echo ""

  # Open browser (macOS)
  if [[ "$OSTYPE" == "darwin"* ]]; then
    echo -e "${GREEN}ğŸŒ Opening browser...${NC}"
    sleep 2
    open "$FRONTEND_URL"
  else
    echo -e "${YELLOW}ğŸŒ Open $FRONTEND_URL in your browser${NC}"
  fi
else
  echo ""
  echo -e "${RED}âŒ Services failed to start within expected time${NC}"
  echo -e "${YELLOW}Check logs with: $DOCKER_COMPOSE -f $COMPOSE_FILE logs${NC}"
  exit 1
fi
